/* pages/profile/index.wxss */

/* ==================== Page Container ==================== */
.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F8FAFC 0%, #FFFFFF 100%);
  padding-bottom: 40rpx;
}

/* ==================== Profile Header ==================== */
.profile-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0 60rpx;
  background: #FFFFFF;
}

.avatar-wrapper {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 24rpx;
}

.user-avatar {
  width: 100%;
  height: 100%;
  border-radius: 80rpx;
  border: 4rpx solid #F0F0F0;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.user-nickname {
  font-size: 40rpx;
  font-weight: 600;
  color: #1A1A1A;
  letter-spacing: 1rpx;
}

/* ==================== Stats Dashboard ==================== */
.stats-dashboard {
  margin: 32rpx 32rpx 24rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 32rpx;
}

.stat-cell {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #F8F9FA 0%, #FFFFFF 100%);
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.stat-cell:active {
  transform: scale(0.97);
}

.stat-number {
  font-size: 56rpx;
  font-weight: 700;
  color: #2C3E50;
  line-height: 1.2;
  margin-bottom: 8rpx;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto;
}

.stat-label {
  font-size: 24rpx;
  color: #7F8C8D;
  letter-spacing: 1rpx;
}

/* ==================== Menu List ==================== */
.menu-list {
  margin: 0 32rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #F5F5F5;
  transition: background-color 0.2s ease;
  position: relative;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #F8F9FA;
}

.menu-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
  line-height: 1;
}

.menu-title {
  font-size: 32rpx;
  color: #2C3E50;
  font-weight: 500;
}

.menu-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.menu-badge {
  font-size: 24rpx;
  color: #95A5A6;
  background: #F0F0F0;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
}

.menu-arrow {
  font-size: 48rpx;
  color: #BDC3C7;
  line-height: 1;
  font-weight: 300;
}

/* 联系客服按钮特殊处理 */
.contact-btn {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding: 0;
  margin: 0;
  background: transparent;
  border: none;
  line-height: normal;
}

.contact-btn::after {
  border: none;
}

/* ==================== Version Info ==================== */
.version-info {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 48rpx;
  padding: 0 32rpx;
}

.version-text {
  font-size: 24rpx;
  color: #95A5A6;
  letter-spacing: 1rpx;
}

/* ==================== Animations ==================== */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.page-container > * {
  animation: fadeIn 0.4s ease-out;
}
