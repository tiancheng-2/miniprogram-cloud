/* pages/dish/dish.wxss */

/* ==================== Page Container ==================== */
.page-container {
  min-height: 100vh;
  background-color: #F9F9F9;
  padding-bottom: 180rpx;
}

/* ==================== Hero Area 顶部沉浸区 ==================== */
.hero-area {
  position: relative;
  width: 100%;
  height: 800rpx;
  overflow: hidden;
}

.hero-image {
  width: 100%;
  height: 100%;
  display: block;
}

/* 渐变遮罩 */
.hero-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 400rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
  pointer-events: none;
}

/* 评分标记 */
.dish-badge {
  position: absolute;
  top: 60rpx;
  right: 40rpx;
  padding: 16rpx 32rpx;
  border-radius: 999rpx;
  backdrop-filter: blur(8rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  z-index: 10;
}

.dish-badge.must-try {
  background-color: rgba(255, 215, 0, 0.95);
}

.dish-badge.avoid {
  background-color: rgba(200, 200, 200, 0.95);
}

.badge-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #000000;
  line-height: 1;
}

/* Hero 内容 */
.hero-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 40rpx;
  z-index: 1;
}

.dish-name {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #FFFFFF;
  line-height: 1.3;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

/* ==================== Info Sheet 悬浮信息卡 ==================== */
.info-sheet {
  margin-top: -80rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  background-color: #FFFFFF;
  border-radius: 48rpx 48rpx 0 0;
  padding: 32rpx 0;
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 2;
}

.info-item {
  display: flex;
  align-items: center;
  min-height: 88rpx;
  padding: 16rpx 32rpx;
  transition: background-color 0.3s ease;
}

.info-item:active {
  background-color: #F9F9F9;
}

.info-icon {
  width: 48rpx;
  font-size: 32rpx;
  line-height: 1;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.info-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.info-text {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-main);
  line-height: 1.5;
}

.info-arrow {
  font-size: 48rpx;
  color: var(--text-secondary);
  line-height: 1;
  margin-left: 16rpx;
}

/* 标签区 */
.info-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  padding: 16rpx 32rpx;
}

.tag {
  padding: 12rpx 24rpx;
  background-color: #F2F2F7;
  border-radius: 999rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: var(--text-secondary);
}

/* ==================== Bottom Spacer ==================== */
.bottom-spacer {
  height: 40rpx;
}

/* ==================== Action Bar 底部操作栏 ==================== */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #FFFFFF;
  padding: 20rpx 40rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #F0F0F0;
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.action-buttons {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  padding: 0;
  transition: all 0.3s ease;
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  transform: scale(0.98);
  opacity: 0.8;
}

/* 次级按钮 */
.action-btn.secondary {
  width: 88rpx;
  background-color: #F2F2F7;
}

.action-icon {
  font-size: 36rpx;
  line-height: 1;
}

/* 主按钮 */
.action-btn.primary {
  flex: 1;
  background-color: #000000;
  color: #FFFFFF;
}

/* 危险按钮 */
.action-btn.danger {
  flex: 1;
  background-color: #FF3B30;
  color: #FFFFFF;
}

.action-text {
  font-size: 28rpx;
  font-weight: 600;
  line-height: 1;
}
